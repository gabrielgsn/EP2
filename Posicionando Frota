frota = {
    "porta-aviões":[],
    "navio-tanque":[],
    "contratorpedeiro":[],
    "submarino": [],
}

def parametros(frota, tamanho, navios):
    
    orientacao = ''
    linha = int(input('Linha: '))
    coluna = int(input('Coluna: '))
    if tamanho < 1 :
        start = input('[1] Vertical [2] Horizontal >')
        if start == 1:
            orientacao = 'vertical'
        if start == 2:
            orientacao = 'horizontal'
    else:
        orientacao = 'horizontal'
    frota[navios] += define_posicoes(linha, coluna, orientacao, tamanho)
    if posicao_valida(frota, linha, coluna, orientacao, tamanho) == False:
        return('Insira as informações referentes ao navio ',navios,' que possui tamanho ',tamanho,'. ')
        parametros(frota, tamanho, navios)
        
    
def define_posicoes(linha, coluna, orientacao, tamanho):
    l = []
    for i in range(tamanho):
        if orientacao == 'vertical':
            l.append([(linha+i), coluna])
        if orientacao == 'horizontal':
            l.append([linha, (coluna+i)])
    return l
def posicao_valida(frota, linha, coluna, orientacao, tamanho):
    validacao = []
    for i in range(tamanho):
        if orientacao == 'vertical':
            validacao.append([(linha+i), coluna])
            if (linha+i) > 9:
                return False
        if orientacao == 'horizontal':
            validacao.append([linha, (coluna+i)])
            if (coluna+i) > 9:
                return False
    for barco, cordenadas_geral in frota.items():
        for cordenada_umbarco in cordenadas_geral:
            for posicao in cordenada_umbarco:
                for itemvalido in validacao:
                    if itemvalido == [posicao[0],posicao[1]]:
                        return False
    return True
#==================================
for navios in frota:
    tamanho = 0
    
    if navios == "submarino":
        tamanho = 1
        for i in range(4):
            print('Insira as informações referentes ao navio ',navios,' que possui tamanho ',tamanho,'. ')
            parametros(frota, tamanho, navios)
    if navios == "contratorpedeiro":
        tamanho = 2
        for i in range(3):
            print('Insira as informações referentes ao navio ',navios,' que possui tamanho ',tamanho,'. ')
            parametros(frota, tamanho, navios)
            posicao_valida(frota, linha, coluna, orientacao, tamanho)
    if navios == "navio-tanque":
        tamanho = 3
        for i in range(2):
            print('Insira as informações referentes ao navio ',navios,' que possui tamanho ',tamanho,'. ')
            parametros(frota, tamanho, navios)
    if navios == "porta-aviões":
        tamanho = 4
        print('Insira as informações referentes ao navio ',navios,' que possui tamanho ',tamanho,'. ')
        
        parametros(frota, tamanho, navios)

print(frota)

